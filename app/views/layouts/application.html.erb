<!DOCTYPE html>
<html>
<head>
  <title>App</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if session[:user_id] %>
  <%= link_to 'logout', "/logout", method: :post %>
<% end %>

<p id="notice"><%= params[:notice] %></p>

<%= yield %>

</body>
</html>
