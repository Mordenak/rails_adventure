<% if !session[:user_id] %>
  <%= form_tag("/login", method: "post") do %>
    <%= label_tag(:name, "Username:") %>
    <%= text_field_tag(:name) %><br />
    <%= label_tag(:name, "Password:") %>
    <%= password_field_tag(:password) %><br />
    <%= submit_tag("Login") %>
  <% end %>
  <button><a href="/users/new">Sign up</a></button>
<% else %>
  <%= "Welcome back #{User.find_by_id(session[:user_id]).name}" %>
<% end %>
